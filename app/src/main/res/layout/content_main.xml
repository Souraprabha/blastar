<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <Button
        android:id="@+id/aboutButton"
        android:layout_width="0dp"
        android:layout_height="89dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/gradient"
        android:text="About"
        app:layout_constraintLeft_toLeftOf="@+id/playButton"
        app:layout_constraintRight_toRightOf="@+id/playButton"
        app:layout_constraintTop_toBottomOf="@+id/playButton"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/playButton"
        android:layout_width="166dp"
        android:layout_height="89dp"
        android:text="Play"
        android:background="@drawable/gradient"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <FrameLayout
        android:layout_width="1231dp"
        android:layout_height="655dp"
        android:id="@+id/frameLayout"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/BackgroundImage"
            android:layout_width="1184dp"
            android:layout_height="match_parent"
            android:background="@drawable/sidescrollingstars"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/sidescrollingstars" />

        <ImageView
            android:id="@+id/centerImage"
            android:hardwareAccelerated="true"
            android:layout_width="1184dp"
            android:layout_height="match_parent"
            android:background="@drawable/sidescrollingstars"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/sidescrollingstars" />

        <ImageView
            android:id="@+id/centerImageAnimationHelper"
            android:layout_width="1184dp"
            android:layout_height="match_parent"
            android:background="@drawable/sidescrollingstars"
            android:hardwareAccelerated="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/sidescrollingstars" />

    </FrameLayout>

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Blastar"
        android:textColor="#FFFFFF"
        android:textSize="90sp"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="17dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/shipImage"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:hardwareAccelerated="true"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        app:layout_constraintHorizontal_bias="0.0" />


</android.support.constraint.ConstraintLayout>
